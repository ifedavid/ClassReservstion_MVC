@model IEnumerable< LearningMVC_API.Data.ClassModel>

@{
    ViewData["Title"] = "Class catalogue";

}
<h2>@ViewData["Title"]</h2>
<h3 class="text-danger" style="text-align:center;">@ViewData["Message"]</h3>

<table class="table table-condensed table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>

                    <a  asp-action="ReserveClass" asp-route-id="@item.Id" class="btn btn-danger">Reserve</a>




                </td>
            </tr>
        }
    </tbody>
</table>

